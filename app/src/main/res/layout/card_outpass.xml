<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12sp"
    android:elevation="12dp"
    app:contentPadding="12dp"
    android:layout_marginVertical="12dp"
    app:cardElevation="12dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tvStudentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/cardId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fontFamily="sans-serif-black"
            android:layout_marginStart="30dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
              android:gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/tvFromLabelCardOutpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="64dp"
                android:layout_marginTop="10dp"
                android:text="From"
                app:fontFamily="sans-serif-black" />

        <TextView
            android:id="@+id/tvToLabelCardOutpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="64dp"
            android:layout_marginTop="61dp"
            android:text="To"
            app:fontFamily="sans-serif-black"/>

        <TextView
            android:id="@+id/tvFromCardOutpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="232dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/tvToCardOutpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="232dp"
            android:layout_marginTop="61dp"
            />

        <TextView
            android:id="@+id/tvLeaveDateLabelCardOutpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="64dp"
            android:layout_marginTop="105dp"
            android:text="Leave date"
            app:fontFamily="sans-serif-black"/>

        <TextView
            android:id="@+id/tvRetDateLabelCardOutpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="144dp"
            android:text="Return Date"
            app:fontFamily="sans-serif-black"/>

        <TextView
            android:id="@+id/tvLeaveDateCardOutpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="232dp"
            android:layout_marginTop="107dp"
            android:text="Return Date"
            />

        <TextView
            android:id="@+id/tvRetDateCardOutpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="228dp"
            android:layout_marginTop="147dp"
            android:text="Return Date" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    </LinearLayout>


</android.support.v7.widget.CardView>