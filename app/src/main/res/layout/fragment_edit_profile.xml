<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginTop="-200dp"

    android:layout_height="match_parent"

    tools:context=".EditProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvproEdit"
        android:text="Click to edit profile pic"
        android:textSize="24sp"/>
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/profPicSet"

        android:src="@drawable/iiit" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_name_stu"
        android:textSize="18sp"
        android:hint="Edit Name"/>
    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_phone_stu"
        android:textSize="18sp"
        android:hint="Edit PhoneNumber"/>

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_save_stu"
        android:background="@color/colorPrimary"
        android:text="Save"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"/>

</LinearLayout>